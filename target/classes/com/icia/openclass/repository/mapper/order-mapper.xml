<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="order">
<insert id="save" parameterType="orderDTO"> 
insert into (m_number, m_id, p_number, p_name, p_price, o_payment, o_date)
values ({#m_number}, #{m_id}, #{p_number}, #{p_name}, #{p_price}, #{o_payment}, #{o_date})
</insert>

<!-- 주문번호로 저장됐는지 조회 -->
<select id="findById" parameterType="long" resultType="orderDTO">
select * from order_table where p_number = #{p_number}
</select>

<select id="findorder" parameterType="long" resultType="orderDTO">
select * form order_table where o_number = #{o_number}
</select>

 </mapper>